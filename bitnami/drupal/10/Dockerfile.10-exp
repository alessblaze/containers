   && tar -xvf mariadb-11.4.5.tar.gz
   
   
RUN apt-get update && apt-get install -y --no-install-recommends \
    autoconf \
    dpkg-dev \
    file \
    g++ \
    gcc \
    libc-dev \
    make \
    pkg-config \
    re2c \
    ca-certificates \
    curl \
    xz-utils \
    gnupg \
    apache2-dev \
    libargon2-dev \
