   && cd /build \
   && wget https://downloads.bitnami.com/files/stacksmith/php-8.3.20-3-linux-${OS_ARCH}-debian-12.tar.gz \
   && tar -xvf php-8.3.20-3-linux-${OS_ARCH}-debian-12.tar.gz \
   && wget https://www.php.net/distributions/php-8.3.20.tar.xz \
   && tar -xvf php-8.3.20.tar.xz \
   && wget http://downloads.bitnami.com/files/stacksmith/apache-2.4.63-2-linux-${OS_ARCH}-debian-12.tar.gz \
   && tar -xvf apache-2.4.63-2-linux-${OS_ARCH}-debian-12.tar.gz \
   && wget https://dlcdn.apache.org//apr/apr-1.7.5.tar.gz \
   && tar -xvf apr-1.7.5.tar.gz \
   && wget https://dlcdn.apache.org//apr/apr-util-1.6.3.tar.gz \
   && tar -xvf apr-util-1.6.3.tar.gz  \
   && wget https://dlcdn.apache.org/httpd/httpd-2.4.63.tar.gz \
   && tar -xvf httpd-2.4.63.tar.gz \
   && wget https://github.com/owasp-modsecurity/ModSecurity/releases/download/v2.9.8/modsecurity-v2.9.8.tar.gz \
   && tar -xvf modsecurity-v2.9.8.tar.gz \
